header-menu-simple.nav.simple-menus(itemscope, itemtype='WebsiteHeader')
  meta(itemprop='type', content='simple')
  div.left.logo
    each logo in item.logos
      a.logo-link(href=logo.url, itemprop='logos', itemscope, itemtype='WebsiteLogo')
        if logo.image
          img.logo-image(src=logo.image, alt=logo.alt, itemprop='image')
        if logo.name
          span(itemprop='url')=logo.name

  if item.menuCollections && item.menuCollections[1]
    div.right.secondary(itemprop='menuCollections', itemscope, itemtype='WebsiteMenuCollection')
      each menu in item.menuCollections[1].menus
        if menu.links
          span.menu(tabindex=0, itemprop='menus', itemscope, itemtype='WebsiteMenu')
            .menu-title.fade-on-hover=menu.name
            .menu-body
              .menu-content
                each link in menu.links
                  .menu-link(itemprop='links', itemscope, itemtype='WebsiteMenuLink')
                    a(href=link.url, itemprop='url', target=link.target)
                      if link.image
                        img.menu-link-icon(src=link.image, alt=link.name, itemprop='image')
                      .menu-link-text
                        .menu-link-name(itemprop='name')=link.name
                        if link.description
                          .menu-link-description(itemprop='description')=link.description
        else
          div.menu-link-only(itemprop='menus', itemscope, itemtype='WebsiteMenu')
          if menu.type == 'button'
            a.button(href=menu.url, tabindex=0, itemprop='url', target=menu.target)
              span(itemprop='name')=menu.name
          else
            a.fade-on-hover(href=menu.url, tabindex=0, itemprop='url', target=menu.target)
              span(itemprop='name')=menu.name

  if item.menuCollections && item.menuCollections[0]
    div.center.primary(itemprop='menuCollections', itemscope, itemtype='WebsiteMenuCollection')
      each menu in item.menuCollections[0].menus
        if menu.links
          span.menu(tabindex=0, itemprop='menus', itemscope, itemtype='WebsiteMenu')
            .menu-title.fade-on-hover=menu.name
            .menu-body
              .menu-content
                each link in menu.links
                  .menu-link(itemprop='links', itemscope, itemtype='WebsiteMenuLink')
                    a(href=link.url, itemprop='url', target=link.target)
                      if link.image
                        img.menu-link-icon(src=link.image, alt=link.name, itemprop='image')
                      .menu-link-text
                        .menu-link-name(itemprop='name')=link.name
                        if link.description
                          .menu-link-description(itemprop='description')=link.description
        else
          div.menu-link-only(itemprop='menus', itemscope, itemtype='WebsiteMenu')
          if menu.type == 'button'
            a.button(href=menu.url, tabindex=0, itemprop='url', target=menu.target)
              span(itemprop='name')=menu.name
          else
            a.fade-on-hover(href=menu.url, tabindex=0, itemprop='url', target=menu.target)
              span(itemprop='name')=menu.name
