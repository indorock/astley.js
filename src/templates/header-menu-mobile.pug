header-menu-mobile.mobile-menus
  label.show-mobile-icon.fade-on-hover(for='show-mobile-menu') &#x2630;
  .mobile-menu-content
    .mobile-menu-wrapper
      label.close-mobile-icon.fade-on-hover(for='show-mobile-menu') &#215;
      if  item.menuCollections
        each menuCollection in item.menuCollections
          .menu-collection(itemprop='menuCollections', itemscope, itemtype='WebsiteMenuCollection')
            each menu in menuCollection.menus
              if menu.links
                span.menu(tabindex=0, itemprop='menus', itemscope, itemtype='WebsiteMenu')
                  input(type='checkbox', id=menu.name.toLowerCase().replace(/\s+/, "-"))
                  label.menu-title.fade-on-hover(for=menu.name.toLowerCase().replace(/\s+/, "-"))=menu.name
                  .menu-body
                    .menu-content
                      each link in menu.links
                        .menu-link(itemprop='links', itemscope, itemtype='WebsiteMenuLink')
                          a(href=link.url, itemprop='url', target=link.target)
                            if link.image
                              img.menu-link-icon(src=link.image, alt=link.name, itemprop='image')
                            .menu-link-text
                              .menu-link-name(itemprop='name')=link.name
                              if link.description
                                .menu-link-description(itemprop='description')=link.description
              else
                a.fade-on-hover(href=menu.url, tabindex=0, itemprop='url')
                  span(itemprop='name')=menu.name

